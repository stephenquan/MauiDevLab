<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MauiDevLab.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiDevLab"
    xmlns:sf="clr-namespace:Syncfusion.Maui.Toolkit.NumericEntry;assembly=Syncfusion.Maui.Toolkit"
    xmlns:skia="clr-namespace:SkiaSharp.Views.Maui.Controls;assembly=SkiaSharp.Views.Maui.Controls"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    x:DataType="local:MainPage">

    <Grid>
        <Grid Grid.RowDefinitions="Auto,*">
            <Grid Padding="10">
                <Button
                    Clicked="ToggleLightDarkMode"
                    HorizontalOptions="End"
                    Text="Toggle Light/Dark Mode" />
            </Grid>

            <ScrollView Grid.Row="1">
                <VerticalStackLayout Padding="30" Spacing="30">

                    <Label Style="{StaticResource FormLabel}" Text="Entry" />
                    <Entry />

                    <Label Style="{StaticResource FormLabel}" Text="Entry (borderless)" />
                    <Entry local:InputViewExtras.BorderThickness="0" />

                    <Label Style="{StaticResource FormLabel}" Text="Entry (numeric input)" />
                    <Entry
                        local:InputViewExtras.BorderThickness="0"
                        local:InputViewExtras.MaskType="Numeric"
                        Keyboard="Numeric" />

                    <Label Style="{StaticResource FormLabel}" Text="Editor" />
                    <Editor />

                    <Label Style="{StaticResource FormLabel}" Text="Editor (borderless)" />
                    <Editor local:InputViewExtras.BorderThickness="0" />

                    <Label Style="{StaticResource FormLabel}" Text="Editor (numeric input)" />
                    <Editor
                        local:InputViewExtras.BorderThickness="0"
                        local:InputViewExtras.MaskType="Numeric"
                        Keyboard="Numeric" />


                </VerticalStackLayout>
            </ScrollView>
        </Grid>
    </Grid>
</ContentPage>
